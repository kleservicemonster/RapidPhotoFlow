{
  "name": "rapidphotoflow",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.2.23",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:backend": "turbo run dev --filter=@rapidphotoflow/backend",
    "dev:frontend": "turbo run dev --filter=@rapidphotoflow/frontend",
    "dev:worker": "cd apps/backend && node ace queue:listen",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:migrate": "cd apps/backend && node ace migration:run",
    "db:migrate:refresh": "cd apps/backend && node ace migration:refresh",
    "db:rollback": "cd apps/backend && node ace migration:rollback",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=20"
  }
}
